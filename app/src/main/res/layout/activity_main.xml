<?xml version="1.0" encoding="utf-8"?><!-- Ui designed to custom action bar. layout includes menu, issue and application name, share and settings icon -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90A4AE"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <RelativeLayout
        android:id="@+id/rootlayot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/textplace"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:text="Enter Place name"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <AutoCompleteTextView
            android:id="@+id/edittextplace"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/textplace"
            android:layout_marginLeft="16dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/edittextplace"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_marginTop="5dp"
            android:background="#263238"
            android:text="Go "
            android:textColor="#ffffff" />

    </RelativeLayout>


</RelativeLayout>
