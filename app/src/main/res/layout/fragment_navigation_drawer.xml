<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="teleportscreenlatest.mobimedia.com.wheatherapplicastion.fragements.NavigationDrawerFragement">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/siginlayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="0dp"
        android:background="#000000"
        android:padding="10dp">

        <ImageView
            android:id="@+id/signinIMage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/signin" />

        <TextView
            android:id="@+id/signin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/signinIMage"
            android:gravity="center_vertical"
            android:text="Sign in"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <View
            android:id="@+id/singleline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:background="#d4d4d4"></View>
    </RelativeLayout>


    <TextView
        android:id="@+id/fetchedlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/siginlayout"></TextView>

    <ListView
        android:id="@+id/navigationlistitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fetchedlist"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:entries="@array/navigationlistitem"
       ></ListView>


</RelativeLayout>
